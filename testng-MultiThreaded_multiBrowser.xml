<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<!--多浏览器、多线程并行测试-->
<suite name="All Test Suite" parallel="tests" thread-count="4">
    <!--Firefox浏览器-->
    <test name="Firefox Test">
        <!--name为传给FrameworkTestCase类的参数名，值为Firefox-->
        <parameter name="browser" value="Firefox"/>
        <classes>
            <!--name为包名.类名-->
            <class name="testSuite.FrameworkTestCase"/>
        </classes>
    </test>
    <!--Chrome浏览器-->
    <test  name="Chrome Test">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="testSuite.FrameworkTestCase"/>
        </classes>
    </test>
    <!--Chrome无头浏览器-->
    <test  name="Chrome Headless Test">
        <parameter name="browser" value="Chrome_headless"/>
        <classes>
            <class name="testSuite.FrameworkTestCase"/>
        </classes>
    </test>
    <!--Firefox无头浏览器-->
    <test  name="Firefox Headless Test">
        <parameter name="browser" value="Firefox_headless"/>
        <classes>
            <class name="testSuite.FrameworkTestCase"/>
        </classes>
    </test>
</suite>